# StockBot local override sample
# Copy values you need into ./config.properties

email.enabled=true
email.smtp_host=smtp.gmail.com
email.smtp_port=587
email.smtp_user=YOUR_SMTP_USER
email.smtp_pass=YOUR_SMTP_PASS
email.from=YOUR_FROM
email.to=YOUR_TO
email.subject_prefix=[StockBot JP]

report.top5.min_indicator_coverage_pct=80
report.coverage.use_tradable_denominator=true

fetch.concurrent=12
news.concurrent=10
fetch.bars=520
fetch.bars.market=520
fetch.bars.watchlist=520
fetch.retry.max=2
fetch.retry.backoff_ms=400

news.query.max_variants=6
news.query.max_results_per_variant=8
news.source.google_rss=true
news.source.bing=true
news.source.yahoo_finance=true

ai.enabled=true
ai.watchlist.mode=ALL
ai.timeout_sec=600
ai.max_tokens=1200
ai.temperature=0.2
# watchlist.ai.score_threshold keeps legacy gate semantics (-10..10),
# while watchlist JP score is mapped by: (jpScore - 50) / 5
# watchlist.ai.score_threshold=-2.0
# watchlist.ai.news_min=8
# watchlist.ai.drop_pct_threshold=-2.0

indicator.core=sma20,sma60,rsi14,atr14
indicator.allow_partial=true

vector.memory.enabled=true
vector.memory.news.top_k=12
vector.memory.signal.top_k=10
vector.memory.signal.max_cases=20

ticker.name.cache.ttl_hours=168

mail.dry_run=false
mail.fail_fast=false
mail.dry_run.dir=outputs/mail_dry_run
